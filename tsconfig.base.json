{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom", "ES2021.String"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@commudle/auth": ["libs/auth/src/index.ts"],
      "@commudle/editor": ["libs/editor/src/index.ts"],
      "@commudle/in-viewport": ["libs/in-viewport/src/index.ts"],
      "@commudle/infinite-scroll": ["libs/infinite-scroll/src/index.ts"],
      "@commudle/ngx-datatable": ["libs/ngx-datatable/src/index.ts"],
      "@commudle/shared-channels": ["libs/shared/channels/src/index.ts"],
      "@commudle/shared-components": ["libs/shared/components/src/index.ts"],
      "@commudle/shared-environments": ["libs/shared/environments/src/index.ts"],
      "@commudle/shared-models": ["libs/shared/models/src/index.ts"],
      "@commudle/shared-services": ["libs/shared/services/src/index.ts"],
      "@commudle/shared-validators": ["libs/shared/validators/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
